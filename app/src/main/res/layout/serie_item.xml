<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/logomarvel"
            android:id="@+id/itemSerieImagem"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemSerieImagem"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="#C10D0D"/>

        <TextView
            android:id="@+id/itemSerieTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incrivel Hulk"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            app:layout_constraintTop_toBottomOf="@id/itemSerieImagem"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/itemSerieInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemSerieTitulo"
            tools:text="2012"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/itemSerieTraco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/itemSerieInicio"
            app:layout_constraintTop_toBottomOf="@id/itemSerieTitulo"
            android:text=" - " />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/itemSerieFim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/itemSerieTraco"
            app:layout_constraintTop_toBottomOf="@id/itemSerieTitulo"
            tools:text="2020" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:paddingBottom="5dp"
            android:id="@+id/itemSerieDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemSerieFim"/>




    </androidx.constraintlayout.widget.ConstraintLayout>




</com.google.android.material.card.MaterialCardView>